<!DOCTYPE html>
<html>
  <head>
    <title>Tokenboots</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">

      <h2>Tokens</h2>

      <div class="row">
        <div class="col-sm-9">
          <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <a class="nav-item nav-link active" href="/tokens/new">New Token</a> |
                <a class="nav-item nav-link" href="/tokens/out">Outgoing Tokens </a> |
                <a class="nav-item nav-link" href="/tokens/in">Incoming Tokens   </a>
                <% if @user %>
                    | <a class="nav-item nav-link" href="/login">Current User : <%= @user %> </a>
                <% end %>
              </div>
            </div>
          </nav>
          <%= image_tag("token.png", width: 128, height: 128, :alt => "token") %>
          <%= yield %>
        </div>
        <div class="col-sm-3">
          <div class="sidebar">
            <h4>News</h4>
           </div>
        </div>
      </div>
    </div>
  </body>
</html>